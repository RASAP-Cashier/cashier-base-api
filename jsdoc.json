{
  "tags": {
    "allowUnknownTags": true
  },
  "templates": {
    "default": {
      "outputSourceFiles": false,
      "includeDate": false
    },
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "source": {
    "include": ["./app/"],
    "includePattern": "\\.(js|ts)$",
    "exclude": ["/node_modules"]
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "plugins/markdown"
  ],
  "opts": {
    "recurse": false,
    "destination": "./docs/"
  }
}
